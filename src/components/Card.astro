---
interface Props {
	title: string;
	body: string;
	image: string;
}

const { image, body, title } = Astro.props;
---

<div class="flex flex-col md:flex-row items-start">
	<!-- Contenido de texto -->
	<div class="flex flex-col justify-between text-center md:text-left mb-6 md:mb-0 md:max-w-[500px]">
	  <h2 class="text-2xl md:text-4xl font-bold mb-4 text-gradient">
		{title}
	  </h2>
	  <p class="text-sm md:text-base">
		{body}
	  </p>
	</div>
  
	<!-- Imagen -->
	<div class="w-[150px] h-[150px] md:w-[180px] md:h-[180px] mx-auto md:mx-0 md:ml-5">
	  <img src={image} alt="DescripciÃ³n de la imagen" class="w-full h-full object-cover rounded-lg">
	</div>
</div>
  
<style>
	h2 {
	  margin: 0;
	  font-size: 1.25rem;
	  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
	  margin-top: 0.5rem;
	  margin-bottom: 0;
	}
</style>
