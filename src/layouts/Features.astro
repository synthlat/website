---
import Card from '../components/Card.astro';
import '../styles/tailwind.css';
---
<div class="flex flex-col items-center w-full h-auto p-5 md:p-20 mycontainer rounded-lg">
  <h3 class="text-2xl font-semibold mb-5 text-center">FEATURES</h3>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-10 w-full justify-center">
    <Card 
    image="/microphone.webp" 
    title="Lyrics" 
    body="View lyrics while you listen to music." 
    />
    <Card 
      image="/random.png" 
      title="Autoplay" 
      body="Automatically discover new songs you'll love." 
    />
    <Card 
      image="/note.png" 
      title="Always Playing" 
      body="Plays music non-stop! Just like a radio." 
    />
    <Card 
      image="/yas.png" 
      title="Youtube & Spotify" 
      body="Play music from your favorite platforms." 
    />
    <Card 
      image="/planet.png" 
      title="Multi Language" 
      body="Support multiple language per server." 
    />
  </div>
</div>