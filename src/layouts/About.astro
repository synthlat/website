---
import Button from '../components/Button.astro';
---

<div class="mycontainer flex flex-col md:flex-row items-center justify-between h-auto md:h-[340px] w-full p-5 md:p-20 rounded-lg mb-5">
      
    <!-- Imagen circular -->
    <div class="p-[20px] flex-shrink-0 w-[200px] h-[200px] md:w-[250px] md:h-[250px] overflow-hidden flex items-center justify-center md:order-1">
      <img src="/icon.jpeg" alt="Synthlat" class="w-full h-full object-cover rounded-full">
    </div>

    <!-- Contenido principal -->
    <div class="flex flex-col items-center justify-center flex-1 text-center md:text-left md:order-2 md:ml-10">
      <h1 class="text-3xl md:text-4xl mb-2"> <!-- Cambiado a mb-2 para 10px -->
        <span class="text-gradient new-asterdam-font">Synthlat</span>
      </h1>
      <p class="mb-4">The best music bot, apply filters, get song lyrics and much more.</p>
      
      <!-- Botones dentro del mismo div -->
      <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-5 items-center justify-center mt-10"> <!-- space-y-2 para 10px en mÃ³viles -->
        <Button href="https://synth.lat/invite" title="Invite" />
        <Button href="https://dashboard.synth.lat/" title="Dashboard" />
      </div>
    </div>
  </div>